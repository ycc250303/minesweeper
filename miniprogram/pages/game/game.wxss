.scrollarea{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.board {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.board-row {
  display: flex;
}

.uncovered-cell,
.covered-cell ,
.fail-cell{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  min-width: 0;
  min-height: 0;
  overflow: hidden;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  width: var(--cell-size, 32px);
  height: var(--cell-size, 32px);
  border-radius: 12rpx;
  border: 1rpx solid #ddd;
  box-sizing: border-box;
  padding: 0;
}

.covered-cell{
  background-color:gainsboro;
}

.uncovered-cell {
  background-color:white;
}

.fail-cell

.cell-content {
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  vertical-align: middle;
  font-size: 1.2em; 
  word-break: break-all;
  overflow: hidden;
  white-space: nowrap;
}


button.covered-cell .cell-content,
button.uncovered-cell .cell-content {
  font-size: calc(0.7 * var(--cell-size, 32px));
}

.game-info-row {
  display: flex;
  margin-top:10px;
  margin-bottom: 20px;
  flex-direction: row;
  align-items: center;
  justify-content: center;   
  margin-bottom: 16rpx;
}

.game-flags {
  margin-right: 32rpx;
  font-size: 32rpx;
}

.game-time {
  font-size: 32rpx;
  /* 不要用 position: absolute; */
  padding: 0;
  border-radius: 8px;
}